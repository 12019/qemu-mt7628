+
+struct mt7628State {
+    /*< private >*/
+    DeviceState parent_obj;
+    /*< public >*/
+
+    MIPSCPU *cpu;
+    const hwaddr *memmap;
+    mt7628SysCtrlState sysctrl;
+    mt7628intcState intc;
