+static void mt7628_eth_reset(DeviceState *dev)
+{
+    mt7628EthState *s = MT7628_ETH(dev);
+    NetClientState *nc = qemu_get_queue(s->nic);
+
+    s->rx_ring_base = 0;
+    s->rx_ring_idx_max = 0;
+    s->rx_ring_cpu_idx = 0;
+    s->rx_ring_dma_idx = 0;
+
+    s->tx_ring_base = 0;
+    s->tx_ring_idx_max = 0;
+    s->tx_ring_cpu_idx = 0;
+    s->tx_ring_dma_idx = 0;
+    memset(s->tx_buffer, 0, MT7628_ETH_PKT_MAX_LEN);
+
+    s->tx_bytes = 0;
+    s->tx_packets = 0;
+    s->rx_bytes = 0;
+    s->tx_packets = 0;
+
+    s->pcr_wt_data = 0;
+    s->pcr_rd_phy_cmd = 0;
+    s->pcr_wt_phy_cmd = 0;
+    s->pcr_phy_addr_reg = 0;
+    s->pcr_phy_addr = 0;
+    s->pcr_rd_data = 0;
+    s->pcr_rd_ready = 0;
+    s->pcr_wt_done = 0;
+
+    s->bmcr = 0;
+    s->bmsr = 0;
+    s->anar = 0;
+    s->anlpar = 0;
+    mt7628_eth_mii_reset(s, !nc->link_down);
+}
